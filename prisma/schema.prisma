generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Comment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  content   String   @db.VarChar(255)
  postName  String   @db.VarChar(255)
  updatedAt DateTime @updatedAt
}
